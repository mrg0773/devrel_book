{
  "files.associations": {
    "*.md": "markdown"
  },
  "markdown.links.openLocation": "currentGroup",
  "workbench.editorAssociations": {
    "*.md": "default"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/_backups": true,
    "**/_archive_before_split": true,
    "**/_temp_build": true,
    "**/.quarto": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/_temp_build": true
  },
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "on"
    },
    "editor.wordWrap": "on"
  }
}

